<view class="container">
  <view class="profile">
   
    <form bindsubmit="formSubmit" bindreset="formReset">
    
    <view class="weui-cells weui-cells_access">
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell_primary">
          <text>昵称</text>
        </view>
        <input name="nickName" value="{{userInfo.nickName}}"/>
        <view class="weui-cell__ft"></view>
      </view>
      <view class="weui-cell no_access">
        <view class="weui-cell__bd weui-cell_primary">
          <text>电话</text>
        </view>
         <input name="phone"   placeholder="请输入联系方式"/>
        <view class="weui-cell__ft"></view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell_primary">
          <text>微信号</text>
        </view>
         <input name="wxnum" placeholder="请输入微信号"/>
        <view class="weui-cell__ft">
        </view>
      </view>
   
    </view>
    <button formType="submit" type="primary"  style="margin-top:20px">保存</button>
    </form>
  </view>
     
</view>