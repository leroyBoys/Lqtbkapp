/* pages/shop/search/index.wxss */
@import "../../../common/templates/ad/ad.wxss";
@import "../../../common/templates/header/header.wxss";
@import "../../../common/templates/shop/tuangou1.wxss";
.form,.weui-cells{
  background-color: #f4f4f4;

}
.form{
  position: absolute;
      z-index: 99;
      width: 100%
}
.nav{
    display: flex;
    border-bottom: 1px solid #d1d3d4;
}
.form::after{
  content: "";
  clear: both
}
.nav-son{
    display: flex;
    flex: 1;
    text-align: center;
    height: 40px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}
.border-right{
    border-right: 1px solid #e6e6e6;
}

.form .content{
    display: block;
    width: 100%
}

.form .content view{
   display: inline-block;
}
.form .nav .icon{
    border: 4px solid transparent;
    border-top: 4px solid #9b9b9b;
    margin-left: 5px;
}
.border-bottom{
    border-bottom: 1px solid #e6e6e6;
}

.label .center{
  width: 70%;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 5px;
}

.center .middle{
  margin:0 10px
}
.center input{
  text-align: center;
  background: #E8E8E8;
}

.youhuizhekou{
  border: none;
  margin-top: 0;
}

.fullopacity{
    opacity: .5;
}
.nav-son.active .content{
    color: #61beff;
}
.nav-son.active .icon{
    border-bottom: 4px solid #61beff;
    border-top:0;
}
.label{
  width: 100%;
  box-sizing:border-box;
  padding: 2px 15px;
}

.shaixuanbutton{
  width: 100%;
}
.weui-cells,.weui-cell{
  position: static;
    margin-top: 0;
}
.selectcontent{
    padding-top:10px;
}
.selectcontent,.weui-cells{
  font-size: 12px
}
.selectcontent .title{
  font-size: 14px
}
.scroll-container{
  width: 100%;
  height: 100%
}