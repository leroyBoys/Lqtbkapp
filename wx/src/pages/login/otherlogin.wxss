
.container {
  min-height: 50%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
  justify-content:center;
  align-items:center;
} 

.head image{
  width: 50px;
}

.input{
  margin-top:10px;
  padding: 4px 0 ;
  width: 90%;
  text-align: left;
  border-bottom: 1px solid #999999;
  vertical-align:middle;
  align-items:center;
   line-height: 30px;
}
.input icon{
    margin-left: 6px;
  top:-2px;
  position:relative;
}
.input_text{
  margin-left: 4px;
 line-height: 32px;
}

.input.button{
  margin-top:15px;
  border: none;
  padding: 0px;
  color: #333333;
  text-align: center;
  background-color: #999999
}

button,button[plain]{
  border: none
}