.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 500rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  background: #339933;
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 150rpx;  
  border-radius: 50%;  
  box-sizing: border-box;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo text {  
  /* color: #fff; */  
  font-size: 14px;  
  background-color: #c0c0c0;  
  border-radius:40%;  
}  

.shouquanbutton {
  margin-top:20px;
}
.shouquanbutton icon{
  color: #FF0033;
}
button,button[plain]{
  width: 150px;
  padding: 0px;
  margin-bottom: 10px;
  border: 1px #999999 solid;
  border-radius: 10px;
}