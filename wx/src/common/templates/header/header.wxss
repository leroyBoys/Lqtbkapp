@import "../../plugins/font.wxss";
.headhide,.header {
    width: 100%;
    height: 90rpx;
    background-color: #f4f4f4;
}
.header {
    position: fixed;
    z-index: 100;
}
.header .main {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
    font-weight: normal;
    margin: 0 auto;
    margin-top: 20rpx;
    padding: 0 28rpx 14rpx 28rpx;
    font-size: 14px;
}
.main .search,.main .pre,.main .next{
    display:flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}

.header .main .search{
    border-bottom: 1px solid #d1d3d4; 
    border-radius: 5rpx;
    box-sizing: border-box;
    padding-left: 5px;
    width: 80%;
    height:26px;
}

.main icon{
   font-size: 20px;
}
.search .input {
    flex: 1;
    height:1.5rem;
    margin-left: 5px; 
}
.search .place-holder {
    color: #333;
    text-align: center;
}
