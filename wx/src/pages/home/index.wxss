/* pages/my/my.wxss */

.userinfo {
  display: flex;
  padding: 70rpx 30px;
  justify-content:space-between;
  font-size: 11px;
 background: #339933;  /**/
}

.pic{
  justify-content: center;
   align-items:center
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #333;
  font-size: 16px;
}
.pic_div{
  padding: 0 8px;
  box-sizing: border-box;
  text-align: center;
}
.pic_div .bottom{
  line-height: 30px;
}

.pic_div .bottom icon{
  display: inline;
}

.operate{
  line-height: 54px;
}


.weui_cell{
    position: relative;
    display: flex;
    padding: 10px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;

}
.weui_cell_bd{
  display: inline-block;
    line-height: 32px;
}
.weui_cell_bd_p{
  margin-left: 8px;
  font-size: 14px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}

