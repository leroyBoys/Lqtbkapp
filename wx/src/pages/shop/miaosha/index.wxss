@import "../../../common/templates/shop/tuangou1.wxss";
.miaosha {
  width: 100%;
  height: 78px;
  background-color: #2d3845;
  font-size: 16px;
  color: #fff;
  white-space: nowrap; 
  display:flex ;
}


.miaosha_container .desc {
  z-index: 1;
  top: 46px;
  background: #fff;
  width: 100%;
  padding: 5px;
  position: absolute;
  box-sizing: border-box;
}

.desc .float_left{
    color: #fc353a;
}

.time, .active {
  text-align: center; /*设置文本水平居中*/
  padding: 10px;
  display:inline-block;
}
.miaosha .top,.miaosha .bottom{
  line-height: 16px;
}

.miaosha .bottom{
  font-size: 14px;
  font-weight: lighter;
}

.active {
  background-color: #fc353a;
  position: relative;
}

.active:after {
  content: "";
  position: absolute;
  top: 46px;
  margin-left: -10px;
  z-index: 11;
  border-top: 7px solid #fc353a;
  border-left: 9px solid transparent;
  border-right: 9px solid transparent;
}


.miaosha_container .container {
  background-color: #ccc;
}
